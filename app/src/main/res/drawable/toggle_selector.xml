<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:width="@dimen/switch_track_width" android:height="@dimen/switch_track_height" android:start="@dimen/switch_track_checked_start" android:top="@dimen/switch_track_outer_top">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/switch_track_outer_radius" android:topLeftRadius="@dimen/switch_track_outer_radius" />
                    <solid android:color="@color/green" />
                </shape>
            </item>
            <item android:width="@dimen/switch_track_inner_width" android:height="@dimen/switch_track_inner_height" android:start="@dimen/switch_track_inner_checked_start" android:top="@dimen/switch_track_inner_top">
                <shape android:shape="oval">
                    <solid android:color="@color/background" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:width="@dimen/switch_track_width" android:height="@dimen/switch_track_height" android:start="@dimen/switch_track_un_checked_start" android:top="@dimen/switch_track_outer_top">
                <shape android:shape="rectangle">
                    <corners android:bottomRightRadius="10dp" android:topRightRadius="10dp" />
                    <solid android:color="@color/red" />
                </shape>
            </item>
            <item android:width="@dimen/switch_track_inner_width" android:height="@dimen/switch_track_inner_height" android:start="@dimen/switch_track_inner_un_checked_start" android:top="@dimen/switch_track_inner_top">
                <shape android:shape="oval">
                    <solid android:color="@color/background" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>